{
  "manifest_version": 3,
  "name": "Steroid",
  "version": "1.0.0",
  "description": "A command palette for Chrome, inspired by IntelliJ's Shift+Shift.",
  "permissions": [
    "tabs",
    "scripting"
  ],
  "background": {
    "service_worker": "src/background.ts"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.tsx"]
    }
  ],
  "action": {
    "default_popup": "index.html"
  }
}
