{
  "manifest_version": 3,
  "name": "Steroid",
  "version": "1.0.0",
  "description": "A command palette for Chrome, inspired by IntelliJ's Shift+Shift.",
  "permissions": [
    "tabs",
    "scripting",
    "tabGroups",
    "storage"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "type": "module"
    }
  ],
  "action": {
    "default_title": "Steroid - Press Shift+Shift to open"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png"
  }
}
